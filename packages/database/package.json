    "prisma-zod-generator": "^2.1.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@types/pg": "^8.16.0",
    "prisma": "^7.2.0",
    "typescript": "^5.9.3"
  }
